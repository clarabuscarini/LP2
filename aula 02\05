package ifsp;

import java.util.Scanner;
import java.util.HashMap;

public class auladelp2dia2demaiobernardodomingos {

	public static void main(String[] args) {

		Scanner entrada = new Scanner(System.in); 
		System.out.println("Digite o nome de uma cidade: ");
		String Cidades = entrada.nextLine();
		
		Scanner entrada1 = new Scanner(System.in); 
		System.out.println("Digite o nome de outra cidade: ");
		String Cidades1 = entrada1.nextLine();
		
		Scanner entrada2 = new Scanner(System.in); 
		System.out.println("Digite o nome de outra cidade: ");
		String Cidades2 = entrada2.nextLine();
		
		Scanner entrada3 = new Scanner(System.in); 
		System.out.println("Digite o nome de outra cidade: ");
		String Cidades3 = entrada3.nextLine();
		
		HashMap<String, Integer> mapa= new HashMap <String, Integer>();
				
		mapa.put(Cidades, 20);
		mapa.put(Cidades1, 20);
		mapa.put(Cidades2, 20);
		mapa.put(Cidades3, 20);
		
		for(String m: mapa.keySet() )
			System.out.println( m + " - " + mapa.get(m));
		
	}

}
